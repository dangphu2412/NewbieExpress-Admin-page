<% layout('../../../layouts/admin/app.ejs') -%>
<% stylesheet('/stylesheets/style.css') -%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Post Titles</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">User Profile</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-12 offset-1">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">View each post by clicking into them : </h3>
                    </div>
                    <% titles.forEach(title => { %>
                      <a href="/admin/posts/view/<%= title.slug %>" class="nav-form text-dark"><h4><i class="fas fa-angle-right"></i> <strong><%= title.title %></strong></h4></a>
                    <% }) %>
                </div>
            </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<% script('/plugins/jquery/jquery.min.js') -%>
<% script('/dist/js/adminlte.js') -%>
<% script('/dist/js/demo.js') -%>
<% script('/dist/js/main.js') -%>